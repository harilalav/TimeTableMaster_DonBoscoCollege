<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.TimetableManagerDB">

    <uses-permission android:name="android.permission.USE_BIOMETRIC" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_timetable"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_timetable"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HolidayActivity" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <service
            android:name=".NotificationService"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.example.TimetableManagerDB.NotificationService" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>

        <activity android:name=".TeacherRegisterActivity" />
        <activity android:name=".WelcomeActivity"></activity>
        <activity android:name=".StudentViewerActivity" />
        <activity android:name=".TeacherViewerActivity" />
        <activity android:name=".SciDepActivity" />
        <activity android:name=".ArtsDepActivity" />
        <activity android:name=".TimetableCreatorActivity" />
        <activity android:name=".TimetableActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>